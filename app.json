{
    "name": "neutron",
    "description": "neutron update server",
    "repository": "https://github.com/jubianchi/neutron",
    "keywords": ["node", "koa", "electron", "squirrel"],
    "env": {
        "NEUTRON_SCHEME": {
            "description": "Scheme used to reach the neutron instance",
            "value": "https",
            "required": true
        },
        "NEUTRON_HOST": {
            "description": "Public host of the neutron instance",
            "value": "<appname>.herokuapp.com",
            "required": true
        },
        "NEUTRON_PORT": {
            "description": "Public port used to reach the neuron instance",
            "value": 443,
            "required": true
        },
        "NEUTRON_STORAGE": {
            "description": "Storage provider used to host updates (one of 'azure', 'amazon' or 'github')",
            "value": "azure",
            "required": true
        },
        "NEUTRON_STORAGE_AZURE_ACCOUNT": {
            "description": "Azure storage account name",
            "value": "",
            "required": false
        },
        "NEUTRON_STORAGE_AZURE_KEY": {
            "description": "Azure storage account key",
            "value": "",
            "required": false
        },
        "NEUTRON_STORAGE_AMAZON_KEY": {
            "description": "Amazon S3 storage access key ID",
            "value": "",
            "required": false
        },
        "NEUTRON_STORAGE_AMAZON_SECRET": {
            "description": "Amazon S3 storage access key secret",
            "value": "",
            "required": false
        },
        "NEUTRON_STORAGE_AMAZON_REGION": {
            "description": "Amazon S3 storage region (http://docs.aws.amazon.com/general/latest/gr/rande.html#s3_region)",
            "value": "",
            "required": false
        },
        "NEUTRON_STORAGE_GITHUB_TOKEN": {
            "description": "Github personal access token",
            "value": "",
            "required": false
        },
        "NEUTRON_STORAGE_GITHUB_REPOSITORIES": {
            "description": "List of allowed repositories (must be a valid JSON string)",
            "value": "",
            "required": false
        }
    },
    "image": "heroku/nodejs"
}
